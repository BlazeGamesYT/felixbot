{
    "compilerOptions": {
        "target": "ESNext",
        "moduleResolution": "Node",
        "module": "ESNext",
        "skipLibCheck": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "typeRoots": ["src/@types", "node_modules/@types"],
        "outDir": "dist",
        "esModuleInterop": true
    },
    "include": ["src", "registration"],
    "exclude": ["node_modules"]
}
